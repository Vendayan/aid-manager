// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "ensure-deps",
			"type": "npm",
			"script": "ensure:deps",
			"problemMatcher": []
		},
		{
			"label": "build:webview",
			"type": "shell",
			"command": "npm run build:webview",
			"problemMatcher": []
		},
		{
			"label": "watch-extension",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": "none"
		},
		{
			"label": "build-all",
			"dependsOn": [
				"ensure-deps",
				"build:webview",
				"watch-extension"
			],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}
